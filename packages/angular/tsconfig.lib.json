{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "jest.config.ts",
    "test-setup.ts",
    "index.ts",
    "src/runtime/**/*",
    "mf/**/*",
    "testing/**/*"
  ],
  "include": ["**/*.ts"]
}
